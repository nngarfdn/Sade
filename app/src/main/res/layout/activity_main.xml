<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halo Dunia"
        android:textSize="40sp"
        android:fontFamily="@font/mont_bold_italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/tesDataNanang"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="23dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@color/colorAccent"
        android:text="Ngetes Data"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tesLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:text="Ngetes LOGIN"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tesDataNanang"
        tools:layout_editor_absoluteX="23dp" />

    <Button
        android:id="@+id/tesLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="23dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorPrimary"
        android:text="Ngetes WILAYAH"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/tesLogin"
        tools:layout_editor_absoluteX="23dp" />
</androidx.constraintlayout.widget.ConstraintLayout>