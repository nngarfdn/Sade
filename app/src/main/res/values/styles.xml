<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableRight">@drawable/ic_icon_search</item>
        <item name="android:outlineAmbientShadowColor" tools:ignore="NewApi">@color/white</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">@color/white</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHighlight">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColorLink">@color/white</item>
    </style>

    <style name="ImageButtonMenu">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/background_menu</item>
    </style>

    <style name="TextMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/mont_medium</item>
    </style>

    <style name="Button">
        <item name="android:fontFamily">@font/mont_medium</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/background_button_round_8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Outline">
        <item name="android:background">@drawable/background_button_outline_8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditText">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">@font/mont_regular</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textColorHighlight">#CCC</item>
    </style>

    <style name="TextKategori">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/mont_medium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonSelengkapnya">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">@dimen/margin_24dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/mont_regular</item>
    </style>
</resources>