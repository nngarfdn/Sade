<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableRight">@drawable/ic_icon_search</item>
        <item name="android:outlineAmbientShadowColor" tools:ignore="NewApi">@android:color/white</item>
        <item name="android:outlineSpotShadowColor" tools:ignore="NewApi">@android:color/white</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHighlight">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textColorLink">@android:color/white</item>
    </style>

    <style name="ImageButtonMenu">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/background_menu</item>
    </style>

    <style name="TextMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/mont_medium</item>
    </style>

</resources>