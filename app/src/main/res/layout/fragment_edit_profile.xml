<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".fragment.EditProfileFragment"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/mont_semibold"
        android:text="Edit Profil"
        android:textColor="@android:color/white"
        android:textSize="24sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white_rounded"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_name_edit_profile"
                style="@style/EditTextTambah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_32dp"
                android:layout_marginTop="32dp"
                android:hint="Nama lengkap"
                android:imeOptions="actionNext"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/edt_address_edit_profile"
                style="@style/EditTextTambah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_32dp"
                android:layout_marginTop="16dp"
                android:hint="Alamat"
                android:imeOptions="actionNext"
                android:inputType="text" />

            <EditText
                android:id="@+id/edt_phone_edit_profile"
                style="@style/EditTextTambah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_32dp"
                android:layout_marginTop="16dp"
                android:hint="Nomor telepon"
                android:imeOptions="actionNext"
                android:inputType="phone" />

            <EditText
                android:id="@+id/edt_whatsapp_edit_profile"
                style="@style/EditTextTambah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_32dp"
                android:layout_marginTop="16dp"
                android:hint="Nomor WhatsApp"
                android:imeOptions="actionDone"
                android:inputType="phone" />

            <Button
                android:id="@+id/btn_save_edit_profile"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Simpan"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:enabled="false"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>